   [global]
    workgroup = {{ activedirectorydomainshort }}
    server string = Samba Server Version %v
    hosts allow = 127., {{ ipallow }}
    socket options = TCP_NODELAY IPTOS_LOWDELAY SO_RCVBUF=131072 SO_SNDBUF=131072
    use sendfile = true
    min protocol = SMB2
    inherit permissions = yes
    ea support = yes
    vfs objects = fruit streams_xattr
    fruit:metadata = stream
    fruit:model = MacSamba
    fruit:veto_appledouble = no
    fruit:posix_rename = yes
    fruit:zero_file_id = yes
    fruit:wipe_intentionally_left_blank_rfork = yes
    fruit:delete_empty_adfiles = yes
    fruit:nfs_aces = no

    log file = /var/log/samba/log.%m
    max log size = 50
   #log level =3

    security = ads
    realm = {{ activedirectorydomain }}
    idmap config * : backend = tdb
    idmap config * : range = 100000-299999
    idmap config {{ activedirectorydomainCAPshort }} : backend = rid
    idmap config {{ activedirectorydomainCAPshort }} : range = 10000-99999
    winbind separator = +
    winbind enum users = yes
    winbind enum groups = yes
    winbind use default domain = yes
    winbind refresh tickets = yes

    load printers = No
    cups options = raw
    printcap name = /dev/null

[{{ sharename }}]
  comment = {{ sharename }} Share
  path = {{ sharepath }}
  public = no
  writable = yes
  create mask = 0770
  force create mode = 0770
  directory mask = 770
  force group = {{ accessgroup }}
  guest ok = no
  vfs objects = fruit streams_xattr
  valid users = @"{{ accessgroup }}"